{
  "manifest_version": 3,
  "name": "URL Blocker",
  "version": "2.0.0",
  "description": "Block distracting websites and stay focused. Patterns sync across devices. 100% free - no ads, no limits, no premium.",
  "author": "ybhaw",
  "homepage_url": "https://github.com/ybhaw/url-blocker-extension",
  "browser_specific_settings": {
    "gecko": {
      "id": "url-blocker@ybhaw",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "webNavigation", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Blocker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  }
}
